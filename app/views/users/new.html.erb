<%= form_for :user,url: user_new_path do |f| %>

<% if @user.errors.any? %>
 <div id="error_explanation">
   <h2>
     <%= pluralize(@user.errors.count, "error") %> Could not save this user:
   </h2>
   <ul>
     <% @user.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
     <% end %>
   </ul>
 </div>
<% end %>
  <p>
    <%= f.label :firstname %><br>
    <%= f.text_field :firstname%>
  </p>
 
  <p>
    <%= f.label :secondname %><br>
    <%= f.text_field :secondname %>
  </p>

  <p>
    <%= f.label :email%><br>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :password%><br>
    <%= f.password_field :password %>
  </p>

   <p>
    <%= f.submit %>
  </p>

<% end %>