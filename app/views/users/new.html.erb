<%= form_for :user do  |f| %>
  <p>
    <%= f.label :firstname %><br>
    <%= f.text_field :firstname%>
  </p>
 
  <p>
    <%= f.label :secondname %><br>
    <%= f.text_field :secondname %>
  </p>

  <p>
    <%= f.label :email%><br>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :password%><br>
    <%= f.password_field :password %>
  </p>

   <p>
    <%= f.submit %>
  </p>

<% end %>